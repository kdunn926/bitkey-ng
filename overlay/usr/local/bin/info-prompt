#!/usr/bin/env python3
# Copyright (c) 2014 Alon Swartz <alon@turnkeylinux.org>

"""
Display info dialog prompt

Options:
    --title=            title text (default: info)
    --text=             dialog text (default: '')
"""

import os
import sys
import gtk
import getopt

def fatal(e):
    print('Error: ' + str(e), file=sys.stderr)
    sys.exit(1)

def usage(e=None):
    if e:
        print('Error: ' + str(e), file=sys.stderr)

    cmd = os.path.basename(sys.argv[0])
    print('Syntax: {} [--opts] infofile'.format(cmd), file=sys.stderr)
    print(__doc__.strip(), file=sys.stderr)

    sys.exit(1)

class Dialog(object):
    def __init__(self, parent=None, title='', text=''):
        self.dialog = gtk.MessageDialog(
            parent,
            gtk.DIALOG_MODAL | gtk.DIALOG_DESTROY_WITH_PARENT,
            gtk.MESSAGE_QUESTION,
            gtk.BUTTONS_OK,
            text)

        self.dialog.set_title(title)
        self.dialog.get_image().set_visible(False)

    def run(self):
        self.dialog.show()
        response = self.dialog.run()
        self.dialog.destroy()

def main():
    try:
        l_opts = ['help', 'title=', 'text=']
        opts, args = getopt.gnu_getopt(sys.argv[1:], 'h', l_opts)
    except getopt.GetoptError as e:
        usage(e)


    title = 'info'
    text = ''
    for opt, val in opts:
        if opt in ('-h', '--help'):
            usage()

        elif opt == '--title':
            title = val

        elif opt == '--text':
            text = val.decode('string_escape')

    d = Dialog(title=title, text=text)
    d.run()


if __name__ == '__main__':
    main()



